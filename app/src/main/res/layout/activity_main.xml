<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <Button
                android:id="@+id/load_chocolate_rewarded"
                style="@style/ButtonStyle"
                android:onClick="onButtonClicked"
                android:text="Chocolate Rewarded Video Ad"/>

            <Button
                android:id="@+id/load_chocolate_inview"
                style="@style/ButtonStyle"
                android:onClick="onButtonClicked"
                android:text="Chocolate Inview Ad"/>

            <Button
                android:id="@+id/load_mopub_rewarded"
                style="@style/ButtonStyle"
                android:onClick="onButtonClicked"
                android:text="Mopub Rewarded Video Ad"/>

            <Button
                android:id="@+id/load_mopub_inview"
                style="@style/ButtonStyle"
                android:onClick="onButtonClicked"
                android:text="Mopub Inview Ad"/>

            <TextView
                style="@style/TextAppearance.AppCompat.Small"
                android:text="Scroll Down to see Logs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <FrameLayout
                android:id="@+id/inview"
                android:layout_width="@dimen/inview_width"
                android:layout_height="@dimen/inview_height"
                />

            <EditText
                android:id="@+id/log"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginTop="6dp"
                android:editable="false"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:scrollbars="vertical"/>

        </LinearLayout>

    </ScrollView>
</layout>